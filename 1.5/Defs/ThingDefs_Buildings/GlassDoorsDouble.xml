<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--========================= Double Laser Door (2x1) =============================-->

    <ThingDef ParentName="SD_GlassDoorDefault">
        <defName>SD_LaserDoorDouble</defName>
        <label>double laser door (2x1)</label>
        <size>(2, 1)</size>
        <thingClass>StevesDoors.Building_UnmirroredMultiTileDoor</thingClass>
        <uiIconPath>StevesDoors/Things/Building/Door/SD_LaserDoorDefault_MenuIcon</uiIconPath>
        <statBases>
            <WorkToBuild>15000</WorkToBuild>
            <MaxHitPoints>750</MaxHitPoints>
            <Beauty>30</Beauty>
        </statBases>
        <costList Inherit="False">
            <Steel>20</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <placeWorkers>
            <li>PlaceWorker_MultiCellDoor</li>
        </placeWorkers>
        <building>
            <blueprintClass>Blueprint_Build</blueprintClass>
            <blueprintGraphicData>
                <texPath>StevesDoors/Things/Building/Door/SD_GlassDoorLaserDouble_Blueprint</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(2, 1)</drawSize>
            </blueprintGraphicData>
            <doorTopGraphic>
                <texPath>StevesDoors/Things/Building/Door/SD_Blank</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(1, 1)</drawSize>
            </doorTopGraphic>
            <doorSupportGraphic>
                <texPath>StevesDoors/Things/Building/Door/SD_Blank</texPath>
                <graphicClass>Graphic_Multi</graphicClass>
                <drawSize>(1, 1)</drawSize>
            </doorSupportGraphic>
        </building>
        <comps Inherit="False">
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Breakdownable"/>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>50</basePowerConsumption>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>3</glowRadius>
                <colorPickerEnabled>true</colorPickerEnabled>
            </li>
            <li Class="StevesDoors.CompProperties_ExtraDoubleDoorGraphics">
                <extraDoorGraphics>
                    <li>
                        <texPath>StevesDoors/Things/Building/Door/SD_GlassDoorLaserDoubleLeft</texPath>
					    <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>Transparent</shaderType>
                        <drawSize>(2.0, 1.0)</drawSize>
                        <spinFactor>0</spinFactor>
                        <shouldFade>true</shouldFade>
                        <fadeFactor>1</fadeFactor>
                        <xMoveAmount>2</xMoveAmount>
                        <useGlowerColor>true</useGlowerColor>
                        <isLeftSideGraphic>true</isLeftSideGraphic>
                    </li>
                    <li>
                        <texPath>StevesDoors/Things/Building/Door/SD_GlassDoorLaserDoubleRight</texPath>
					    <graphicClass>Graphic_Single</graphicClass>
                        <shaderType>Transparent</shaderType>
                        <drawSize>(2.0, 1.0)</drawSize>
                        <spinFactor>0</spinFactor>
                        <shouldFade>true</shouldFade>
                        <fadeFactor>1</fadeFactor>
                        <xMoveAmount>2</xMoveAmount>
                        <useGlowerColor>true</useGlowerColor>
                    </li>
                </extraDoorGraphics>
            </li>
        </comps>
    </ThingDef>

